# General Configuration

# The external hostname of the GitLab server (e.g., gitlab.example.com).
# Default: None (must be set).
GITLAB_HOST=gitlab.${DOMAIN}

# The external port of the GitLab server.
# Default: 80 (HTTP) or 443 (HTTPS).
GITLAB_PORT=80

# Set to "true" to enable HTTPS.
# Default: false.
GITLAB_HTTPS=false

# The relative URL root for GitLab (useful if running under a subpath).
# Default: None.
GITLAB_RELATIVE_URL_ROOT=

# Database Configuration

# The database server hostname.
# Default: None (must be set if using external database).

# SMTP Configuration

# Set to "true" to enable SMTP.
# Default: false.
SMTP_ENABLED=false

# The SMTP domain.
# Default: None.
SMTP_DOMAIN=example.com

# The SMTP server hostname.
# Default: None.
SMTP_HOST=smtp.example.com

# The SMTP server port.
# Default: 587.
SMTP_PORT=587

# The SMTP username.
# Default: None.
SMTP_USER=user@example.com

# The SMTP password.
# Default: None.
SMTP_PASS=yourpassword

# Set to "true" to enable STARTTLS.
# Default: false.
SMTP_STARTTLS=false

# The SMTP authentication type (e.g., "login").
# Default: login.
SMTP_AUTHENTICATION=login

# LDAP Configuration

# Set to "true" to enable LDAP.
# Default: false.
LDAP_ENABLED=false

# The LDAP server hostname.
# Default: None.
LDAP_HOST=ldap.example.com

# The LDAP server port.
# Default: 389.
LDAP_PORT=389

# The LDAP attribute for the username.
# Default: sAMAccountName.
LDAP_UID=sAMAccountName

# The LDAP method (e.g., "ssl", "tls", "plain").
# Default: plain.
LDAP_METHOD=plain

# The LDAP bind DN.
# Default: None.
LDAP_BIND_DN=cn=admin,dc=example,dc=com

# The LDAP bind password.
# Default: None.
LDAP_PASSWORD=yourpassword

# The LDAP base DN.
# Default: None.
LDAP_BASE=dc=example,dc=com

# OAuth Configuration

# Set to "true" to enable OAuth.
# Default: false.
OAUTH_ENABLED=false

# Automatically sign in with the specified OAuth provider.
# Default: None.
OAUTH_AUTO_SIGN_IN_WITH_PROVIDER=

# Allow SSO with OAuth providers.
# Default: false.
OAUTH_ALLOW_SSO=false

# Block auto-created users.
# Default: false.
OAUTH_BLOCK_AUTO_CREATED_USERS=false

# Backup Configuration

# The path where backups are stored.
# Default: /var/opt/gitlab/backups.
BACKUP_PATH=/var/opt/gitlab/backups

# The cron schedule for automatic backups.
# Default: None.
BACKUP_CRON=

# Other Configuration

# The timezone for the GitLab instance.
# Default: UTC.
GITLAB_TIMEZONE=UTC

# The email address used for GitLab notifications.
# Default: None.
GITLAB_EMAIL=admin@example.com

# The display name for GitLab emails.
# Default: GitLab.
GITLAB_EMAIL_DISPLAY_NAME=GitLab

# The reply-to address for GitLab emails.
# Default: None.
GITLAB_EMAIL_REPLY_TO=

# The subject suffix for GitLab emails.
# Default: None.
GITLAB_EMAIL_SUBJECT_SUFFIX=

# The secret key base for the database.
# Default: None (automatically generated).
GITLAB_SECRETS_DB_KEY_BASE=P[4zqB08DA_x

# The secret key base for the application.
# Default: None (automatically generated).
GITLAB_SECRETS_SECRET_KEY_BASE=P[4zqB08DA_x

# The secret key base for OTP.
# Default: None (automatically generated).
GITLAB_SECRETS_OTP_KEY_BASE=P[4zqB08DA_x

# Container-Specific Configuration

# Allows you to specify additional configuration options directly in the Omnibus format.
# Default: None.
GITLAB_OMNIBUS_CONFIG=
