# ==============================================
# Healthpay Monorepo - Environment Configuration
# ==============================================
# Copy this file to .env and fill in the values

# ==============================================
# Database Configuration
# ==============================================
DATABASE_URL="mysql://user:password@localhost:3306/healthpay"

# ==============================================
# Application Settings
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME=Healthpay

# ==============================================
# JWT Configuration
# ==============================================
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================
# Security - Vault Configuration (Optional)
# ==============================================
# If not configured, the system falls back to env variables
VAULT_ADDR=
VAULT_TOKEN=

# ==============================================
# Security - Encryption
# ==============================================
# 32-byte hex key for AES-256-GCM encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# ==============================================
# Feature Flags
# ==============================================
# Set to 'true' to enable, 'false' to disable
FEATURE_ENCRYPTION_ENABLED=false
FEATURE_MFA_ENABLED=false
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true
FEATURE_WALLET_SUBSCRIPTION=false
FEATURE_EARLY_PAYMENT=false
FEATURE_AUCTION_SYSTEM=false
FEATURE_MAINTENANCE_MODE=false

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==============================================
# SMS Provider Configuration
# ==============================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Alternative SMS providers
VODAFONE_API_KEY=
VODAFONE_SENDER_ID=

# ==============================================
# Firebase Configuration (for Push Notifications)
# ==============================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ==============================================
# Khadamaty Integration (Bill Payments)
# ==============================================
KHADAMATY_BASEURL=
KHADAMATY_USERID=
KHADAMATY_PASSWORD=
KHADAMATY_AGENTCODE=
KHADAMATY_APPID=

# ==============================================
# Payment Gateway
# ==============================================
PAYMOB_API_KEY=
PAYMOB_INTEGRATION_ID=
PAYMOB_IFRAME_ID=
PAYMOB_HMAC_SECRET=

# ==============================================
# Redis Configuration (Optional - for distributed rate limiting)
# ==============================================
REDIS_URL=redis://localhost:6379

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=debug
LOG_FORMAT=json

# ==============================================
# CORS Configuration
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# ==============================================
# Debug Mode
# ==============================================
DEBUG=false
