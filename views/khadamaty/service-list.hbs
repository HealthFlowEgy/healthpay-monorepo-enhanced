{{> page/nav param=catalog.ServiceType}}

<div class=''>
    <div class="list-group mt-2">
        {{#each services}}
        <a href="/khadamaty/service/{{ ServiceId }}" class="list-group-item">
            <div class='row d-flex align-items-center'>

                <div class="col-2">
                    <img src='https://cdn.khadamaty.com.eg/Production/logo/b/{{ BillerId }}.png'
                        class='img-fluid img-max-height' onerror="this.remove()" />
                </div>
                <div class='title col-8 center pt-1 pb-1'>
                    <h6 class='card-title'> <strong> {{ServiceName}} </strong></h6>
                </div>
                <div class="col-1">
                    <i class="bi bi-chevron-left"></i>
                </div>

            </div>
        </a>
        {{/each}}
    </div>
</div>